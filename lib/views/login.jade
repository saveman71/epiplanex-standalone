extend base

block layout
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Please Sign In
          .panel-body
            form(role='form' method='POST')
              fieldset
                if error
                  .alert.alert-danger=error
                .form-group
                  input.form-control(placeholder='Intranet token', name='token', type='text', autofocus='', value=token)
                button.btn.btn-lg.btn-success.btn-block(href='index.html' type='submit') Login
